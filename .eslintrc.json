{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "plugins": ["angular"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:angular/recommended",
    "prettier"
  ],
  "rules": {
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true
    // Additional rules or overrides can be added here
  },
  "parserOptions": {
    "project": "tsconfig.json"
  }
}
